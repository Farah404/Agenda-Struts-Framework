<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>
    
    <!-- Form Bean Definitions -->
    <form-beans>
        <form-bean name="AddressForm" type="com.axyus.agendastruts.form.AddressForm"/>
    </form-beans>
    
    <!--  Action Mapping Definitions  -->
    <action-mappings>
        <action path="/showaddresses"
                type="com.axyus.agendastruts.action.ShowAddresses"
                validate="false"
                scope="session">
            <forward name="success" path="/jsp/addresses/addresses.jsp"/>
        </action>
 
        <!-- Example of Struts Dispatch Action : has the extra attribute parameter-->
        <action path="/addressaction"
                type="com.axyus.agendastruts.action.AddressAction"
                parameter="actionMethod"
                name="Addressform"
                validate="false"
                scope="session">
            <forward name="addAddress" path="/jsp/addresses/addaddress"/>
            <forward name="editaddress" path="/jsp/addresses/editaddress"/>
            <forward name="deleteAddress" path="/jsp/addresses/deleteaddress"/>
        </action>
    </action-mappings>

</struts-config>
